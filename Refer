<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form with Prompt</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        form {
            margin: 20px;
        }

        label {
            display: block;
            margin-top: 10px;
        }

        input[type="text"],
        input[type="email"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            box-sizing: border-box;
        }

        button {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <form id="mainForm" action="/submit" method="POST">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>
        <br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <br>
        <input type="hidden" id="userPrompt" name="userPrompt">
        <button type="submit">Submit</button>
    </form>

    <script>
        document.getElementById('mainForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent the default form submission

            var userPromptValue = prompt("Please enter a value:");
            if (userPromptValue !== null) { // Check if the user did not click cancel
                document.getElementById('userPrompt').value = userPromptValue;

                // Submit the form manually
                event.target.submit();
            } else {
                alert("Submission cancelled.");
            }
        });
    </script>
</body>
</html>
