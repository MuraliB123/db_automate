import xml.etree.ElementTree as ET

def add_element_to_xml(file_path, new_element_tag, new_element_text):
    tree = ET.parse(file_path)
    root = tree.getroot()
    
    for item in root.findall('.//item'):  # Adjust the XPath to match your XML structure
        new_element = ET.Element(new_element_tag)
        new_element.text = new_element_text
        item.append(new_element)
    
    tree.write(file_path)  # Save changes back to the file

# Example usage:
file_path = 'data.xml'
add_element_to_xml(file_path, 'new_element', 'This is a new element')
