<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Highlight Rows</title>
    <style>
        .highlight {
            border-left: 5px solid red; /* Customize the border-left style as needed */
        }
    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
            <tr id="row-{{ item.id }}">
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>
                    <button class="highlight-btn" data-row-id="row-{{ item.id }}">Highlight</button>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <script>
        // Get the list of highlighted row IDs from Flask
        const highlightedRowIds = {{ highlighted_row_ids | tojson }};

        // Function to highlight rows based on the list of IDs
        function highlightRows() {
            highlightedRowIds.forEach(rowId => {
                const rowElement = document.getElementById('row-' + rowId);
                if (rowElement) {
                    rowElement.classList.add('highlight');
                }
            });
        }

        // Highlight rows when the page loads
        window.onload = highlightRows;
    </script>
</body>
</html>
